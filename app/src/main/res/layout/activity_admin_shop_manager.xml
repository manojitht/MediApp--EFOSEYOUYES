<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    tools:context=".AdminFolder.AdminShopManager">


    <View
    android:id="@+id/total_sales_container"
    android:layout_width="355dp"
    android:layout_height="227dp"
    android:background="@drawable/total_sales_amount_container"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/total_order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of orders: 9"
        android:textColor="#E65100"
        app:fontFamily="@font/nunito_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/total_sales_container"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/total_amount_from_start"
        android:layout_width="158dp"
        android:layout_height="42dp"
        android:text="99,000 LKR"
        android:textColor="#A168E6"
        android:textSize="26dp"
        app:fontFamily="@font/nunito_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/total_sales_container"
        app:layout_constraintVertical_bias="0.133" />

    <TextView
        android:id="@+id/text_total_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earnings from start"
        android:textColor="#1C1B1C"
        android:textSize="22dp"
        app:fontFamily="@font/nunito_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/total_sales_container"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="78dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.192"
        app:srcCompat="@drawable/graph_view" />

    <View
        android:id="@+id/view2"
        android:layout_width="351dp"
        android:layout_height="1dp"
        android:background="#B5B2B2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325" />

    <TextView
        android:id="@+id/view_total_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View orders"
        android:textColor="#377EED"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

    <View
        android:id="@+id/system_info_container"
        android:layout_width="355dp"
        android:layout_height="240dp"
        android:background="@drawable/total_sales_amount_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784" />

    <TextView
        android:id="@+id/orders_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of orders remains: 1"
        android:textColor="#BF360C"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.694"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/admin_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of admins: 15"
        android:textColor="#FF4081"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/users_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of active users: 600"
        android:textColor="#25882D"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of products in show: 90"
        android:textColor="#3A7BDF"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/systemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Information"
        android:textColor="#1C1B1C"
        android:textSize="22dp"
        app:fontFamily="@font/nunito_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56"
        app:textAllCaps="false" />


</androidx.constraintlayout.widget.ConstraintLayout>