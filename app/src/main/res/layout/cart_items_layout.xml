<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/buttonwhite">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cart_items_productimage"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:shapeAppearanceOverlay="@style/CartViewImage" />

        <TextView
            android:id="@+id/cart_items_productname"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="Product name"
            android:textColor="#4A4A49"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_items_productquantity"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_items_productname"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="Product Quantity"
            android:textColor="#568EEC"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_items_productprice"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_items_productquantity"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="left"
            android:text="Product price"
            android:textColor="#F18C0B"
            android:textSize="14dp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>