<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/order_man" />


        <TextView
            android:id="@+id/order_cart_items_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView_category"
            android:fontFamily="@font/nunito_semibold"
            android:text="Username"
            android:textColor="#222121"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="205dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/order_phone" />

        <TextView
            android:id="@+id/phone_number_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="0777210098"
            android:gravity="center"
            android:textColor="#1C1C1B"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_cart_items_username"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:text="Order Id"
            android:textColor="#0D47A1"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_id"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text="Total Price"
            android:textColor="#1E1D1D"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/order_address" />

        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/imageView_category"
            android:layout_below="@id/order_total_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="left"
            android:text="Address, City"
            android:textColor="@color/colorBlack"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="7dp"
            app:srcCompat="@drawable/order_date" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_address_city"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="left"
            android:text="Date"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_address_city"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="35dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="left"
            android:text="Time"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/approved_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text=""
            android:textColor="#356E1F"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shipping_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/approved_admin"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text=""
            android:textColor="#070707"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/show_all_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shipping_status"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonurple"
            android:fontFamily="@font/poppins_semibold"
            android:text="View Order"
            android:textAllCaps="false"
            android:textColor="#F3F0F0" />


    </RelativeLayout>

</RelativeLayout>