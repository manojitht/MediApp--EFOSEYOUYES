<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <EditText
        android:id="@+id/security_questionthree"
        android:layout_width="356dp"
        android:layout_height="65dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:fontFamily="@font/bangers"
        android:hint="Which superhero do you like most?"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="@color/colorLightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611" />

    <EditText
        android:id="@+id/security_questiontwo"
        android:layout_width="356dp"
        android:layout_height="65dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:fontFamily="@font/bangers"
        android:hint="What's your favourite color?"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="@color/colorLightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <EditText
        android:id="@+id/security_questionone"
        android:layout_width="356dp"
        android:layout_height="65dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:fontFamily="@font/bangers"
        android:hint="At which school you've studied first?"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="@color/colorLightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.352" />

    <EditText
        android:id="@+id/security_username"
        android:layout_width="356dp"
        android:layout_height="65dp"
        android:background="@drawable/input_text"
        android:ems="10"
        android:fontFamily="@font/berkshire_swash"
        android:hint="Your UserName please"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="@color/colorLightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="339dp"
        android:layout_height="55dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="Answer for the security questions below to recognise you.."
        android:textAlignment="center"
        android:textColor="@color/colorOrange"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/security_username"
        app:layout_constraintVertical_bias="0.066" />

    <Button
        android:id="@+id/security_submit_button"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/aldrich"
        android:text="Verify Me"
        android:textColor="@color/colorWhite"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/security_questionthree"
        app:layout_constraintVertical_bias="0.207" />
</androidx.constraintlayout.widget.ConstraintLayout>