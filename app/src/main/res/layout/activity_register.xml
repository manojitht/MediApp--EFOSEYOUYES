<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/colorWhite"
    >

    <EditText
        android:id="@+id/password_register"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="password"
        android:inputType="textPersonName"
        android:padding="11dp"
        android:textColorHint="#6C6969"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689" />

    <EditText
        android:id="@+id/password_address"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="address"
        android:inputType="textPersonName"
        android:padding="11dp"
        android:textColorHint="#6C6969"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="email"
        android:inputType="textPersonName"
        android:padding="11dp"
        android:textColorHint="#6C6969"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="408dp"
        android:layout_height="234dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/wonder_register" />

    <EditText
        android:id="@+id/name_register"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input1"
        android:ems="10"
        android:fontFamily="@font/poppins_semibold"
        android:hint="username"
        android:inputType="textPersonName"
        android:padding="11dp"
        android:textColorHint="#6C6969"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <Button
        android:id="@+id/register_now"
        android:layout_width="130dp"
        android:layout_height="47dp"
        android:background="@drawable/buttonsyello"
        android:fontFamily="@font/poppins_semibold"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.793" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="234dp"
        android:layout_height="21dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Hi, if you are an existing user "
        android:textColor="#333232"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.853" />

    <TextView
        android:id="@+id/text_click"
        android:layout_width="84dp"
        android:layout_height="21dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="click here"
        android:textColor="#F57C00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="446dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_yellowdown" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="....Hi, Register here."
        android:textColor="#0C0A0A"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.103" />
</androidx.constraintlayout.widget.ConstraintLayout>